<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/rlAlumni"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfPict"
                android:layout_marginLeft="15dp"
                android:src="@drawable/pawprint"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_toRightOf="@+id/ivProfPict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lineLowongan"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="Nama Alumni"
                    android:textColor="@color/black2"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tvTahunLulus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Tahun lulus"
                    android:textColor="@color/grey_800"
                    android:textSize="15sp" />





            </LinearLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>